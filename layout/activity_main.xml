<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/profileBtn"
        android:layout_width="71dp"
        android:layout_height="79dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/grey_background"
        android:padding="12dp"
        app:srcCompat="@drawable/baseline_account_circle_24" />

    <Button
        android:id="@+id/updateDrinksButton"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="Update drink information"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"/>

    <Button
        android:id="@+id/salesReportButton"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="Sales Report"
        android:textSize="30dp"
        android:layout_below="@+id/updateDrinksButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/billingButton"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@id/salesReportButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Billing"
        android:textSize="30dp"/>

    <!-- New Order Button -->
    <Button
        android:id="@+id/orderButton"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@id/billingButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Order"
        android:textSize="30dp"/>
</RelativeLayout>
